<p id="notice"><%= notice %></p>
<div class="col-md-3 left">
<p>
  <strong>Name:</strong>
  <%= @conversation.name %>
</p>

<p>
  <strong>Kind:</strong>
  <%= @conversation.kind %>
</p>

<%= link_to 'Edit', edit_conversation_path(@conversation) %> |
<%= link_to 'Back', conversations_path %>
<div class="row">
  <div class="col-md-12">
      <h3>#Conversations Name</h3>
      <span>Number of member</span>
  </div>
</div>

</div>
<div class="col-md-9 con" id="conversation_<%= @conversation.id %>">
<%= render(@conversation.messages) %>
<div>
</div>
</div>
<div class="col-md-9 pull-right footer"><%= render('messages/form') %>
</div>
<script>
socket.on('chat message', function(msg){
  conversation_id = msg.substring(0, 1)
  message = msg.substring(2, msg.length)
  $('#conversation_' + conversation_id).append(message)
});
</script>
