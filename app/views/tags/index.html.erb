<p id="notice"><%= notice %></p>

<h1>Tags</h1>
<form method="get" action="" >
  <%= text_field_tag :search_tag %>
  <input type="submit" value="Search" >
</form>
<table>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %>
