<%= simple_form_for(@message, {:remote =>true}) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :body, {:label=>false, :as=>'text', :input_html=>{:placeholder=>'Type your messages', :class=>'submit_on_enter'}} %>
  </div>
  <%= f.input :conversation_id, {:as=>'hidden', :input_html=>{:value=>@conversation.id}} %>
<% end %>
